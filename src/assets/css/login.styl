// 登录
#app > .view.login
  display flex
  flex-direction column
  justify-content space-between
  position relative
  box-sizing border-box
  min-height 100%
  background #2C3944 url(../img/bg-login.png) no-repeat
  background-size 100% 100%
  > .logo
    position absolute
    top 25px
    left 10%
    width 300px
    height 30px
    background url(../img/login-logo.png) no-repeat

  > .reg
    position absolute
    top 25px
    right 10%
    font-size 18px
    color #fff
    line-height 30px

  > .tabs
    width 100%
    height 160px
    position absolute
    bottom 100px
    left 0
    text-align center
    > .tab
      display inline-block
      position relative
      z-index 11
      padding-top 24px
      box-sizing border-box
      opacity 0.8
      p
        color #fff
        margin-top 10px
        font-size 18px
    > .midd
      margin 0 120px
    > .cover
      width 100%
      height 160px
      position absolute
      top 0
      left 0
      z-index 10
      background #000
      opacity 0.4

  > .login-wrap
    width 422px
    height 332px
    position absolute
    z-index 11
    top 40%
    left 50%
    margin-top -166px
    margin-left -211px
    background url(../img/bg-loginbox.png) no-repeat center center
    text-align center
    > .login-box
      width 320px
      min-height 250px
      display inline-block
      > ul
        width 100%
        > li
          height 40px
          > input
            width 320px
            height 40px
            box-sizing border-box
            border 1px solid #ccc
            background #fff
            color #2b2b2b
            font-size 16px
            border-radius 6px
            padding-left 10px
            &:focus
              border 1px solid #ff9c00

        > .mobile
          margin-top 50px
          margin-bottom 8px

        > .errmsg
          text-align left
          color #ff9c00
          height 16px
        > .code
          margin-top 14px
          text-align left
          margin-bottom 40px
          > input
            width 180px
          > button
            width 110px
            height 40px
            background #ff9c00
            color #fff
            text-align center
            border-radius 6px
            margin-left 25px
            cursor pointer
            &:hover
              opacity 0.8
            &.disabled
              background #ccc
              color #666

        > .btn
          button
            width 100%
            height 40px
            background #ff9c00
            border-radius 6px
            color #fff
            font-size 20px
            line-height 40px
            cursor pointer
            &:hover
              opacity 0.8
            &.disabled
              background #ccc
              color #666

        > .info
          color #d2dde0
          font-size 14px
          height 14px
          margin-top 20px
          text-align left

  > footer
    width 100%
    background #000
    opacity 0.6
    position absolute
    bottom 0
    left 0
