// 表格
.w-table
  width 100%
  border none
  color $gray
  background $silver
  th
    border-top 1px solid #D7D7D7
    padding 10px 15px
    text-align left
    color $lblack
    font-size 15px
    font-weight normal
    background $lgray
  td
    border none
    padding 20px 15px
    font-size 13px
  tbody
    tr:nth-child(2n)
      background $dsilver
    tr:hover
      background #efefef

// 分页
.w-page
  display flex
  justify-content flex-end
  margin 15px 0
  color $lblack

// 过滤器
.w-filter
  display flex
  align-items center
  margin 20px -4px
  .item
    margin 0 4px


// ====================================================================== helper
#app
  box-sizing border-box
  height 100%
  color $black
  background $silver
  > .view
    display flex
    flex-direction column
    justify-content space-between
    box-sizing border-box
    position relative
    min-height 100%
    background $silver
    > header
    > .main
    > footer
      box-sizing border-box
      .layout
        max-width designwidth
        // min-width 960px
        margin 0 auto
        padding 0 20px
    > header
      position fixed
      z-index 11
      top 0
      left 0
      right 0
      background $dblack
      .layout
        display flex
        justify-content space-between
        align-items center
        padding 0 20px
        height 55px
        color $gray
        background $dblack
      h1
        display flex
        align-items center
        margin-right 1em
        color #fff
        font-size 22px
        font-weight normal
        letter-spacing 2px
        &::before
          content ''
          display block
          margin-right .3em
          width 109px
          height 26px
          background url(../img/logo.png) no-repeat
          background-size contain
      .loginbar
        display flex
        align-items center
        justify-content flex-end
        .logout
          margin-left 10px
          width 19px
          height 0
          padding-top 16px
          overflow hidden
          font-size 0
          background url(../img/icon-logout.png) no-repeat
          background-size contain
    > .main
      flex 1
      background $silver
      padding-bottom 30px
      &::before
        content ''
        display block
        margin-top 55px
        height 70px
        margin-bottom -70px
        background #fff
        box-shadow 5px 0 5px 0 rgba(0, 0, 0, .1)
      .panel
        background #fff
    > footer
      background $dblack
      .layout
        padding 27px 20px
        p
          color $gray
          text-align center
          font-size 14px
          line-height 1.7
          em
            color $silver

