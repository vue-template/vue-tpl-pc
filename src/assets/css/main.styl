          display flex
          align-items center
          font-size 12
          color $lblack
          font-weight normal
          &::before
            content ''
            display inline-block
            margin-right 8px
            width 20px
            height @width
            background url(../img/icon-money.png) no-repeat
            background-size contain
        a
          color $orange
          &::after
            content '>>'
            font-family sans-serif
      .offers
        display flex
        margin 10px -8px
