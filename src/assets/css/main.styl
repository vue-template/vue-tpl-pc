.subview.order-list
  .w-filter
    .item
      // max-width 10em
      color $gray
      font-size 14px
      .select
        min-width 10em
      .button
        min-width 8em
        font-size 14px
        padding 4px 0
        letter-spacing 3px
  .w-table
    .actions
      display flex
      align-items center
      // min-width 100px
