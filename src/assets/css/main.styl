    filter grayscale(100%)


// ====================================================================== 动画函数
@keyframes slideDown
  0%
    transform translateY(-100%)
  100%
    transform translateY(0)

@keyframes slideUp
  0%
    transform translateY(100%)
  100%
    transform translateY(0)

@keyframes fadeIn
  0%
    opacity 0
  50%
    opacity 0
  100%
    opacity 1

@keyframes scaleOut
  0%
    transform scale(1)
    opacity 1
  50%
    transform scale(2)
    opacity .2
  100%
    transform scale(3)
    opacity 0
